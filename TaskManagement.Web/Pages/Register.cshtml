@page
@using TaskManagement.Web.VM;
@model TaskManagement.Web.Pages.RegisterModel
@{
    Layout = "_Account";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
            <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
            <div class="col-lg-7">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                    </div>
                    <form class="user" method="post">
                       @Html.AntiForgeryToken()
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="text" class="form-control form-control-user" id="exampleFirstName"
                                       placeholder="First Name" name="RegisterDTO.Firstname">
                                <span asp-validation-for="RegisterDTO.Firstname" class="text-white badge badge-danger"></span>

                            </div>
                            <div class="col-sm-6">
                                <input type="text" class="form-control form-control-user" id="exampleLastName"
                                       placeholder="Last Name" name="RegisterDTO.Lastname">
                                <span asp-validation-for="RegisterDTO.Lastname" class="text-white badge badge-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                   placeholder="Email Address" name="RegisterDTO.Email">
                            <span asp-validation-for="RegisterDTO.Email" class="text-white badge badge-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <input type="password" class="form-control form-control-user"
                                       id="exampleInputPassword" placeholder="Password" name="RegisterDTO.Password">
                                <span asp-validation-for="RegisterDTO.Password" class="text-white badge badge-danger"></span>
                            </div>
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <select name="RegisterDTO.CountryId" class="form-control select">

                                    @foreach (var countries in (Countries[])ViewData["countries"])
                                    {
                                        <option value="@countries.id">@countries.name</option>

                                    }

                                </select>
                            </div>
                        </div>
                       
                        <input type="submit" value="Register Account" class="btn btn-primary btn-user btn-block" />

                        <div class="mt-2">
                            <span class="text-white badge badge-danger">@ViewData["err"]</span>

                        </div>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="/login">Already have an account? Login!</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>