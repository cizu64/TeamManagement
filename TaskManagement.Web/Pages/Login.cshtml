@page
@model TaskManagement.Web.Pages.LoginModel
@{
    Layout = "_Account";
}

  <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome to the Task Management Login Page!</h1>
                                    </div>
                                    <form class="user" method="post">
                                        @Html.AntiForgeryToken()
                                        <div class="form-group">
                                            <input type="email" class="form-control form-control-user"
                                                id="exampleInputEmail" aria-describedby="emailHelp"
                                                placeholder="Enter Email Address..." name="LoginDTO.Email">
                                              <span asp-validation-for="LoginDTO.Email" class="text-white badge badge-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                id="exampleInputPassword" placeholder="Password" name="LoginDTO.Password" required>
                                    <span asp-validation-for="LoginDTO.Password" class="text-white badge badge-danger"></span>

                                        </div>
                                        
                                        <input type="submit" value="Login" class="btn btn-primary btn-user btn-block"/>
                                @* <hr>
                                         <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a> *@
                                        <div class="mt-2">
                                         <span class="text-white badge badge-danger">@ViewData["err"]</span>

                                        </div>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/register">Create an Account!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
